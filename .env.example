# Basic Application Configuration
DATABASE_URL=sqlite:///./investment_analysis.db
API_URL=http://localhost:8000
DEBUG=true

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_organization_id_here

# Azure OpenAI Configuration
# Uncomment and configure these when using Azure OpenAI
#AZURE_OPENAI_API_KEY=your_azure_openai_api_key
#AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
#AZURE_OPENAI_DEPLOYMENT_NAME=your_model_deployment_name
#AZURE_OPENAI_API_VERSION=2023-07-01-preview

# Use Azure Managed Identity (optional - for Azure deployments)
#AZURE_OPENAI_USE_MANAGED_IDENTITY=true

# Model Configuration
DEFAULT_MODEL=gpt-4o # or your Azure deployment name
OPTIMIZED_MODEL=gpt-3.5-turbo-1106 # for lower-complexity tasks

# Tool Access Configuration
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
BING_SEARCH_API_KEY=your_bing_search_api_key_here
WEB_SCRAPING_ENABLED=false

# Logging and Monitoring
LOG_LEVEL=INFO
ENABLE_TELEMETRY=true
APPLICATION_INSIGHTS_CONNECTION_STRING=your_app_insights_connection_string # for Azure deployments

# Security and Compliance
PII_FILTER_LEVEL=strict # options: strict, moderate, minimal
ENABLE_CONTENT_SAFETY=true

# Cache Configuration
REDIS_URL=redis://localhost:6379/0 # for production deployment

# Development Settings
AUTO_RELOAD=true
TEST_MODE=false